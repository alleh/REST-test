<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="post"></div>

    <div id="posts">
      <ul id="list">
      </ul>
      
    </div>
    <div id="NewEdit">
      
    </div>
    <script id="post-tpl" type="text/x-handlebars-template">
      <div id="allaposts">
        {{#each items}}
          <li>
          <h3> <a href="#post/{{id}} "> {{ Title }} </a></h3>
          <p> {{Content}} </p>
           <button data-id="{{id}}" class="delete">Delete</button>
           <button data-id="Edit"><a href="#post/{{id}}/edit "> Edit</a></button>
          </li>
          </br>
        {{/each}}
      </div>  
        </br>
        <div id="postform">
          <form name="form">
            Title: <input placeholder="Title here." id="inputEl"/></br>
            Content: <input placeholder="Content here." id="inputEl"/></br>
            <button id="add">Add Post</button>

          </form>
        </div>
    </script>
    <script id="postSingle" type="text/x-handlebars-template">
    <div id = "Single">
      <a href="/"> Back </a></br></br>
      <h2>{{Title}}</h2> </br>
      <p>{{Content}}</p> 
      </br>
    </div>   
    </script>

    <script id="EditNew" type="text/x-handlebars-template">
      <a href="/"> Back </a></br>
      <form name="form">
        Title:  <input value="{{Title}}" id="inputEl"/></br>
        Content: <input value="{{Content}}" id="inputEl"/></br>
        <button id="Edit">Edit</button>
        <input type="submit" value="Submit">
      </form>
    
    </script>
    <script src="/javascripts/jquery-1.11.0.js"></script>
    <script src="/javascripts/handlebars-v1.3.0.js"></script>
    <script src="/javascripts/underscore.js"></script>
    <script src="/javascripts/backbone.js"></script>
    <script src="/javascripts/post.js"></script>
  </body>
</html>
